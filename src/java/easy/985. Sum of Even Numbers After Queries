class Solution {
    public int[] sumEvenAfterQueries(int[] A, int[][] queries) {
        int[] result = new int[A.length];
        for(int i = 0; i<queries.length ; i++){
            A[queries[i][1]] += queries[i][0];
            result[i] = evenSum(A);
        }
        return result;
    }
    public int evenSum(int[] A){
        int sum = 0;
        for(int i = 0;i< A.length;i++){
            if((A[i] %2) == 0){
                sum += A[i];
            }
        }
        return sum;
    }
}
